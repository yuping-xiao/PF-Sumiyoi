<div class="background2">

	<h1>ユーザ編集</h1>
		
	<%= form_for(@user) do |f| %>

		<div class="field">
			<%= f.label :ユーザ名 %>
			<%= f.text_field :name %>
		</div>

		<br>

		<div class="field">
			<%= f.label :プロフィール画像 %>
			<%= f.attachment_field :profile_image %>
		</div>

		<br>

		<div class="field">
			<%= f.label :紹介文 %>
			<%= f.text_area :introduction, cols: '50', rows:'5', class: "form-control", placeholder: "紹介文を書き込む" %>
		</div>

		<br>

		<div class="field">
			<%= f.submit "変更を保存" %>
		</div>

	<br>
	<br>

	<% end %>

</div>
